<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageView">
        <attr name="imageResId" format="reference" />
    </declare-styleable>

    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvFont" format="reference"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MeBanner">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="startPic" format="reference" />
        <attr name="startPicSize" format="dimension" />
        <attr name="endPic" format="reference" />
        <attr name="endPicSize" format="dimension" />
        <attr name="picPaddingHor" format="dimension" />
        <attr name="actionBarHeight" format="dimension" />
    </declare-styleable>

    <!--登录验证滑动    -->
    <declare-styleable name="VerifySeekBar">
        <attr name="vsb_textSize" format="dimension" />
        <attr name="vsb_shadowWidth" format="dimension" />
    </declare-styleable>

</resources>