<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_divider_horizontal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_ee</item>
    </style>

    <style name="style_stock_action_list_layout">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="style_stock_action_list_key">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_66</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">110dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_stock_action_list_value">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColorHint">@color/gray_ab</item>
        <item name="android:layout_marginStart">114dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">236dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_stock_action_list_icon">
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:src">@drawable/icon_right_arrow</item>
    </style>

    <style name="style_stock_action_head_desc">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_66</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
    </style>

    <style name="style_stock_action_head_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 条目 的 RelativeLayout-->
    <style name="Style_RL_Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 条目的 Textview  value-->

    <!-- 包装关联设置页面条目的 TextView  value-->
    <style name="asp_tv_value">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:layout_marginStart">48dp</item>
    </style>

    <!-- 包装关联设置页面条目的 TextView -->
    <style name="asp_tv">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@color/gray_66</item>
    </style>

    <!-- 包装关联设置页面条目的 Image -->
    <style name="asp_image">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:src">@drawable/icon_right_arrow</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- 包装关联设置页面条目的 RelativeLayout -->
    <style name="asp_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>



    <!--  Nirvana 自定义属性  -->

    <!--  下载进度的自定义属性  -->
    <declare-styleable name="CustomHorizontalProgresStyle">
        <attr name="HorizontalProgresUnReachColor" />
        <attr name="HorizontalProgresUnReachHeight" />
        <attr name="HorizontalProgresReachColor" />
        <attr name="HorizontalProgresReachHeight" />
        <attr name="HorizontalProgresTextColor" />
        <attr name="HorizontalProgresTextSize" />
        <attr name="HorizontalProgresTextOffset" />
    </declare-styleable>

    <attr name="HorizontalProgresUnReachColor" format="color" />
    <attr name="HorizontalProgresUnReachHeight" format="dimension" />
    <attr name="HorizontalProgresReachColor" format="color" />
    <attr name="HorizontalProgresReachHeight" format="dimension" />
    <attr name="HorizontalProgresTextColor" format="color" />
    <attr name="HorizontalProgresTextSize" format="dimension" />
    <attr name="HorizontalProgresTextOffset" format="dimension" />

    <!-- 自定义圆角布局 ,可以设置圆角，圆形  -->
    <declare-styleable name="RoundCircleImageView">
        <attr name="isCircle" format="boolean" />
        <attr name="round_background_color" format="color" />
        <attr name="round_background_drawable" format="reference" />
        <attr name="round_radius" format="dimension" />
        <attr name="topLeft" format="dimension" />
        <attr name="topRight" format="dimension" />
        <attr name="bottomRight" format="dimension" />
        <attr name="bottomLeft" format="dimension" />
    </declare-styleable>

    <!--轮播图的点-->
    <declare-styleable name="CarouselDots">
        <attr name="dotRadius" format="dimension" />
        <attr name="dotSelectedColor" format="color" />
        <attr name="dotUnSelectedColor" format="color" />
    </declare-styleable>

    <!-- WebContent的Toolbar   -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- 设置Toolbar标题字体的大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <!--登录按钮    -->
    <style name="CircleCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box</item>
    </style>

</resources>
