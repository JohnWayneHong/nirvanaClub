<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.ToolsTableHeaderBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:translationZ="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/radius4_white"
                android:layout_height="145dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="@{data.mobile}"
                    android:textColor="@color/setting_black"
                    android:textStyle="bold"
                    tools:text="13012345678"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="@{data.systemName}"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/setting_text"
                    tools:text="超级码系统"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:text="@{data.companyName}"
                    android:layout_marginTop="52dp"
                    android:maxLines="2"
                    android:layout_toStartOf="@+id/iv_setting_center_avatar"
                    android:textColor="@color/setting_text"
                    tools:text="浙江甲骨文超级码科技股份有限公司"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="86dp"
                    android:textColor="@color/setting_text"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_setting_center_avatar"
                    app:imageUrl="@{data.companyIcon}"
                    app:placeDrawableId="@{data.companyNomalIcon}"
                    android:layout_alignParentRight="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_version"
            android:paddingStart="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_black"
                android:text="版本"
                android:textSize="15sp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_version"
                android:text="@{data.version}"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="33dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:id="@+id/rl_about_us"
            android:paddingStart="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="关于我们"
                android:textColor="@color/setting_black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_version"
                android:text="@{data.versionType}"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="33dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:id="@+id/rl_update_offline_data"
            android:paddingStart="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_black"
                android:text="@string/update_offline_data"
                android:textSize="15sp"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:id="@+id/rl_clear_data"
            android:paddingStart="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_black"
                android:text="@string/clear_data"
                android:textSize="15sp"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="18dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sign_out"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:text="退出登录"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:gravity="center" />
    </LinearLayout>
</layout>