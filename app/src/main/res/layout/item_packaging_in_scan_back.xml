<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.sql.entity.PackageStockInEntity" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_packaging_association_scan_back_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_32"
            android:textSize="14sp"
            android:text="@{data.outerCode}"
            tools:text="39306382674993903207" />

        <TextView
            android:id="@+id/tv_rl_packaging_association_scan_back_level_name"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/tv_packaging_association_scan_back_code"
            android:background="@drawable/item_edittext_background"
            android:gravity="center"
            android:text="@{data.codeLevelName}"
            android:textColor="#D9D9D9"
            tools:text="ç›’" />

        <RelativeLayout
            android:id="@+id/rl_packaging_association_scan_back_delete"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/icon_clear" />

        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/gray_dd" />
    </RelativeLayout>
</layout>