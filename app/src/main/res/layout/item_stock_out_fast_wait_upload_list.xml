<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.StockOutFastWaitUploadListBean" />
    </data>

    <LinearLayout
        android:id="@+id/ll_stock_out_wait_upload_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="SpUsage,RtlHardcoded,RtlSymmetry,ContentDescription">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <RelativeLayout
                android:id="@+id/rl_stock_out_wait_upload_list_select"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_stock_out_wait_upload_list_select"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_item_select" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{data.create_time}"
                android:textColor="@color/gray_32"
                android:layout_marginLeft="50dp"
                android:textSize="14sp"
                tools:text="123456789" />

            <TextView
                android:id="@+id/tv_stock_out_wait_upload_list_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/pa_product_name"
                android:textColor="@color/gray_aa"
                android:layout_marginLeft="50dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.product_name}"
                android:layout_toRightOf="@+id/tv_stock_out_wait_upload_list_product"
                android:layout_alignBaseline="@+id/tv_stock_out_wait_upload_list_product"
                android:textColor="@color/gray_aa"
                tools:text="商品1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stock_out_wait_upload_list_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="@string/receiving_customer1"
                android:textColor="@color/gray_aa"
                android:layout_marginLeft="50dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.receiver}"
                android:layout_toRightOf="@+id/tv_stock_out_wait_upload_list_receiver"
                android:layout_alignBaseline="@+id/tv_stock_out_wait_upload_list_receiver"
                android:textColor="@color/gray_aa"
                tools:text="张三"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="@string/see_details"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_ee" />

    </LinearLayout>
</layout>