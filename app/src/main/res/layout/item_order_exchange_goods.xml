<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.OrderExchangeGoodsBean.ListBean" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        tools:ignore="SpUsage,RtlHardcoded"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_code_input"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.houseList}"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exchange_out_customer_name_input"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:text="@{data.wareGoodsOutName}"
                android:singleLine="true"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exchange_in_customer_name_input"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                android:text="@{data.wareGoodsInName}"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark_input"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:text="@{data.remark}"
                tools:text="24477674021310213102131021310213102131021310213102131021310213102131021310213121278"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_time_input"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.createTime}"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_order_exchange_goods_goto"
            android:background="@drawable/radius96_blue"
            android:textColor="@color/white"
            android:text="@string/order_exchange_goods"
            android:layout_width="76dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_height="24dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/main_background"
            android:layout_marginTop="10dp"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</layout>