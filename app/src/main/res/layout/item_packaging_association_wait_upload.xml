<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.sql.entity.PackageConfigEntity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        tools:ignore="SpUsage,RtlHardcoded,ContentDescription">

        <ImageView
            android:id="@+id/iv_packaging_association_wait_upload_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/selector_all_select" />

        <LinearLayout
            android:id="@+id/ll_packaging_association_wait_upload_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_packaging_association_wait_upload_select"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.getCreateTimeText}"
                android:textColor="@color/gray_32"
                android:textSize="14sp"
                tools:text="2020-03-04 8:00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pa_product_name"
                    android:textSize="14sp"
                    android:textColor="#C2C2C2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="@{data.productName}"
                    android:textColor="#C2C2C2"
                    tools:text="苹果" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/pa_product_batch"
                    android:textColor="#C2C2C2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="@{data.productBatchName}"
                    android:textColor="#C2C2C2"
                    tools:text="莉莉" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/pa_association_level"
                    android:textColor="#C2C2C2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="@{data.associationLevel}"
                    android:textColor="#C2C2C2"
                    tools:text="莉莉" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/pa_packaging_specifications"
                    android:textColor="#C2C2C2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="@{data.specification}"
                    android:textColor="#C2C2C2"
                    tools:text="莉莉" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_packaging_association_wait_upload_details"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="@string/pending_task_view"
            android:textColor="@color/main_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@id/ll_packaging_association_wait_upload_info"
            android:layout_marginTop="6dp"
            android:background="@color/gray_dd" />
    </RelativeLayout>
</layout>

