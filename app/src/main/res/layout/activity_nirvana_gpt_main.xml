<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.ggb.nirvanahappyclub.bean.MainMenuBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rl_gpt_title"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_history"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:foreground="@drawable/gpt_history_btn"
                app:cardBackgroundColor="#00DADADA"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#0A000000"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <Spinner
                    android:id="@+id/sp_main_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:popupBackground="@drawable/gpt_spinner_dropdown_background"
                    android:popupElevation="0dp"
                    android:spinnerMode="dropdown" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tts_off"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cv_more"
                android:background="#FFFFFF"
                android:foreground="@drawable/gpt_tts_off"
                app:cardBackgroundColor="#00DADADA"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#FFFFFF"
                android:foreground="@drawable/gpt_more_btn"
                app:cardBackgroundColor="#00DADADA"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:foreground="@mipmap/logo_round"
            app:cardBackgroundColor="#00DADADA"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_multi_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:foreground="@drawable/gpt_chat_btn"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_voice_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:foreground="@drawable/gpt_voice_chat_btn"
                app:cardBackgroundColor="#00DADADA"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#19000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <ImageButton
                        android:id="@+id/bt_image"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gpt_image" />

                    <EditText
                        android:id="@+id/et_user_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:ems="10"
                        android:gravity="start|center"
                        android:hint="@string/text_input_hint"
                        android:inputType="textMultiLine"
                        android:maxHeight="150dp"
                        android:textColorHint="#838383"
                        android:textSize="16sp"
                        tools:text="啦啦啦啦啦啦啦啦啦"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/bt_send"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/gpt_send_btn" />

        </LinearLayout>

    </RelativeLayout>

</layout>