<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/common_divider_background"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_box_amount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#323232"
                tools:text="累计5箱" />

            <TextView
                android:id="@+id/tv_code_amount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textColor="#323232"
                android:textSize="16sp"
                tools:text="当前箱第0盒" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/common_divider_background" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/common_divider_background" />

        <TextView
            android:id="@+id/tv_scan_back"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_white_background"
            android:gravity="center"
            android:text="@string/pda_delete_watch"
            android:textColor="@color/main_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_blue_background"
            android:gravity="center"
            android:text="@string/pda_upload"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</layout>