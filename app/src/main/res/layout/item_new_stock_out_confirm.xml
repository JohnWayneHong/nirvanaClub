<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.sql.entity.CodeEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock_out_confirm_item_name"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                tools:text="商品名"
                android:text="@{data.productName}"
                android:includeFontPadding="false"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray_32"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_stock_out_confirm_item_big_box"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_99"
                android:includeFontPadding="false"
                tools:text="100箱"
                android:text="@{data.getThirdNumberUnitCountText}"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_stock_out_confirm_item_box"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_99"
                android:includeFontPadding="false"
                android:layout_marginTop="40dp"
                tools:text="100盒"
                android:text="@{data.getSecondNumberUnitCountText}"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/tv_stock_out_confirm_item_big_box"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_stock_out_confirm_item_number"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_99"
                android:includeFontPadding="false"
                android:layout_marginTop="40dp"
                tools:text="100盒"
                android:text="@{data.getFirstNumberUnitCountText}"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/tv_stock_out_confirm_item_box"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_dd" />
    </LinearLayout>
</layout>
