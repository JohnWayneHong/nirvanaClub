<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.PackageStatisticsBean" />
        <variable
            name="filterData"
            type="com.jgw.delingha.bean.StatisticsFilterBean" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <include
                android:id="@+id/layout_toolbar"
                layout="@layout/layout_toolbar" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:text="@string/product_package_date"
                    android:textColor="@color/gray_33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/gray_bb"
                    android:layout_alignParentBottom="true"
                    android:text="@{filterData.getShowDate}"
                    tools:text="2021年5月20日"/>
                <RelativeLayout
                    android:id="@+id/rl_package_statistics_details_product_filter"
                    android:layout_width="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="23dp"
                        android:background="@drawable/icon_filter"
                        android:layout_centerInParent="true"
                        android:layout_height="23dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/main_background"
                android:layout_height="0.5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textColor="@color/gray_99"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@{data.productName}"
                tools:text="测试商品"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_33"
                        android:textSize="25sp"
                        android:text="@{data.thirdCountStr}"
                        tools:text="0"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_bb"
                        android:textSize="13sp"
                        android:text="@string/thirdUnit"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:background="@color/main_background"
                    android:layout_height="35dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_33"
                        android:textSize="25sp"
                        android:text="@{data.secondCountStr}"
                        tools:text="0"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_bb"
                        android:textSize="13sp"
                        android:text="@string/secondUnit"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:background="@color/main_background"
                    android:layout_height="35dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_33"
                        android:textSize="25sp"
                        android:text="@{data.firstCountStr}"
                        tools:text="0"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_bb"
                        android:textSize="13sp"
                        android:text="@string/firstUnit"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_background"/>
            <com.jgw.common_library.base.view.CustomRecyclerViewContainer
                android:id="@+id/rvc_package_statistics_package_product"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

                <com.jgw.common_library.base.view.CustomBaseRecyclerView
                    android:id="@+id/rv_package_statistics_package_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.jgw.common_library.base.view.CustomRecyclerViewContainer>

        </LinearLayout>

</layout>
