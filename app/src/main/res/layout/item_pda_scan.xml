<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.CodeBean" />
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="88dp"
            android:text="@{data.outerCodeId}"
            android:textColor="@color/gray_32"
            android:textSize="14sp"
            tools:text="39306382674993903207" />

        <TextView
            android:id="@+id/tv_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:text="@{data.codeStatusText}"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="@string/pda_scan_checking"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_check_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:scaleType="center"
            android:src="@drawable/icon_check_ok"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>
</layout>

