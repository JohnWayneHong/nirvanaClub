<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.ggb.nirvanahappyclub.bean.IndexTagBean" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@{data.tagName}"
            android:background="@drawable/selector_tag_item"
            android:textColor="@color/answer_list_text"
            android:layout_marginRight="@dimen/dimen_7"
            android:paddingLeft="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_8"/>

    </LinearLayout>

</layout>

