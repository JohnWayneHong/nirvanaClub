<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fitsSystemWindows="false">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/layout_stock_out_fast_header"
                    layout="@layout/layout_stock_out_fast_header" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.jgw.common_library.base.view.CustomRecyclerViewContainer
                android:id="@+id/rvc_stock_out_fast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.jgw.common_library.base.view.CustomBaseRecyclerView
                    android:id="@+id/rv_stock_out_fast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.jgw.common_library.base.view.CustomRecyclerViewContainer>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include
            android:id="@+id/layout_stock_out_footer"
            layout="@layout/layout_stock_action_footer" />
    </LinearLayout>
</layout>
