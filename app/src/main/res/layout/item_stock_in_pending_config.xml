<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.ConfigurationSelectBean" />
    </data>

    <LinearLayout
        android:id="@+id/ll_pending_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="SpUsage,RtlHardcoded,RtlSymmetry">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="?android:selectableItemBackground"
            android:layout_height="96dp">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_all_select" />

            <TextView
                android:id="@+id/tv_stock_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_select"
                android:text="@{data.dataTime}"
                android:textColor="@color/gray_32"
                android:textSize="14sp"
                tools:text="2020-03-04 08:00" />

            <TextView
                android:id="@+id/tv_stock_in_product_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_stock_in_time"
                android:layout_below="@id/tv_stock_in_time"
                android:layout_marginTop="8dp"
                android:text="@string/pending_task_stock_in_product"
                android:textColor="@color/gray_aa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stock_in_product_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_stock_in_product_key"
                android:layout_toRightOf="@+id/tv_stock_in_product_key"
                android:text="@{data.productName}"
                android:textColor="@color/gray_aa"
                android:textSize="14sp"
                tools:text="00000002" />

            <TextView
                android:id="@+id/tv_stock_in_warehouse_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_stock_in_product_key"
                android:layout_below="@id/tv_stock_in_product_key"
                android:layout_marginTop="8dp"
                android:text="@string/pending_task_stock_in_warehouse"
                android:textColor="@color/gray_aa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stock_in_warehouse_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_stock_in_warehouse_key"
                android:layout_toRightOf="@+id/tv_stock_in_warehouse_key"
                android:textColor="@color/gray_aa"
                android:text="@{data.wareHouseName}"
                android:textSize="14sp"
                tools:text="0000002" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="@string/pending_task_view" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_ee" />

    </LinearLayout>
</layout>