<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.InfoDetailsDemoBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,Autofill,TextFields">

        <RelativeLayout
            android:id="@+id/rl_info_details_item_type4_key"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="*"
                android:textColor="@color/red_f1"
                android:textSize="14sp"
                android:visibility="@{data.requiredVisible}" />

            <TextView
                android:id="@+id/tv_info_details_item_type4_key"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:includeFontPadding="false"
                android:paddingLeft="15dp"
                android:text="@{data.key}"
                tools:text="姓名" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_info_details_item_type4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/rl_info_details_item_type4_key"
            android:background="@null"
            android:enabled="@{data.enable}"
            android:gravity="top|left"
            android:hint="@{data.hintText}"
            android:maxLength="@{data.maxLength}"
            android:paddingTop="14dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:scrollbars="vertical"
            android:text="@={data.value.valueStr}"
            android:textColor="@color/gray_33"
            android:textColorHint="@color/gray_bb"
            android:textSize="14dp"
            tools:hint="啊啊"
            tools:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/et_info_details_item_type4"
            android:layout_height="0.5dp"
            android:background="@color/gray_ee" />
    </RelativeLayout>

</layout>