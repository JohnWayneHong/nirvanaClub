<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.PackageCodeInfoBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical"
        tools:ignore="SpUsage,UseCompoundDrawables,UselessParent,ContentDescription,RtlHardcoded,RtlSymmetry">

        <include layout="@layout/layout_toolbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_yellow"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/supplement_pda_scan_in_tip"
            android:textColor="@color/gray_32"
            android:textSize="14sp" />

        <include
            android:id="@+id/include_supplement_to_box_header"
            layout="@layout/layout_supplement_to_box_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/icon_upper_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/related_query_upper_code"
                    android:textColor="@color/gray_33"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_supplement_to_box_upper_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                tools:visibility="visible">

                <include
                    android:id="@+id/layout_supplement_to_box_upper_code"
                    layout="@layout/item_common_scan_input" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray_ed" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/icon_lower_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/related_query_lower_code"
                    android:textColor="@color/gray_33"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray_ed" />

            <com.jgw.common_library.base.view.CustomRecyclerViewContainer
                android:id="@+id/rvc_supplement_to_box_sub_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_background">

                <com.jgw.common_library.base.view.CustomBaseRecyclerView
                    android:id="@+id/rv_supplement_to_box_sub_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.jgw.common_library.base.view.CustomRecyclerViewContainer>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_ee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/common_divider_background"
            android:orientation="horizontal"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_code_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                tools:text="共88885条" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/common_divider_background" />

            <TextView
                android:id="@+id/tv_scan_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_white_background"
                android:gravity="center"
                android:text="@string/pda_delete_watch"
                android:textColor="@color/main_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_blue_background"
                android:gravity="center"
                android:text="@string/pda_upload"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</layout>