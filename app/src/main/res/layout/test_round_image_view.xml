<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20"
        android:orientation="vertical">

        <com.ggb.nirvanahappyclub.view.round_circle_image_view.RoundCircleImageView
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            app:isCircle="false"
            app:round_background_drawable="@mipmap/splash_welcome"
            app:round_background_color="@color/black"
            app:round_radius="@dimen/dimen_20"
            app:topLeft="@dimen/dimen_20"
            app:topRight="@dimen/dimen_40"
            app:bottomLeft="@dimen/dimen_40"
            app:bottomRight="@dimen/dimen_20" />

        <com.ggb.nirvanahappyclub.view.round_circle_image_view.RoundCircleImageView
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginTop="@dimen/dimen_20"
            app:isCircle="false"
            app:round_background_drawable="@drawable/icon_homepage_header_bg"
            app:round_radius="@dimen/dimen_20"
            app:topLeft="@dimen/dimen_20"
            app:topRight="@dimen/dimen_40"
            app:bottomLeft="@dimen/dimen_40"
            app:bottomRight="@dimen/dimen_20" />

        <com.ggb.nirvanahappyclub.view.round_circle_image_view.RoundCircleImageView
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginTop="@dimen/dimen_20"
            app:isCircle="false"
            app:round_background_color="@color/blue"
            app:round_radius="@dimen/dimen_20"
            app:topLeft="@dimen/dimen_20"
            app:topRight="@dimen/dimen_40"
            app:bottomLeft="@dimen/dimen_40"
            app:bottomRight="@dimen/dimen_20" />

    </LinearLayout>

</layout>
