<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.sql.entity.ExchangeGoodsConfigurationEntity" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar" />

            <RelativeLayout style="@style/asp_rl">

                <TextView
                    android:id="@+id/tv_eg_out_title"
                    style="@style/asp_tv"
                    android:text="@string/exchange_goods_call_out_customer_title" />

                <TextView
                    android:text="@{data.getDisplayOutGoods}"
                    android:id="@+id/tv_eg_out_value"
                    style="@style/asp_tv_value"
                    android:layout_toEndOf="@+id/tv_eg_out_title"
                    android:hint="@string/exchange_goods_call_out_customer_content" />

                <ImageView style="@style/asp_image" />
            </RelativeLayout>

            <View style="@style/style_divider_horizontal" />

            <RelativeLayout style="@style/asp_rl">

                <TextView
                    android:id="@+id/tv_eg_in_title"
                    style="@style/asp_tv"
                    android:text="@string/exchange_goods_call_in_customer_title" />

                <TextView
                    android:text="@{data.getDisplayInGoods}"
                    android:id="@+id/tv_eg_in_value"
                    style="@style/asp_tv_value"
                    android:layout_toEndOf="@+id/tv_eg_in_title"
                    android:hint="@string/exchange_goods_call_in_customer_content" />

                <ImageView style="@style/asp_image" />
            </RelativeLayout>

            <View style="@style/style_divider_horizontal" />

        </LinearLayout>

        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/tv_next_step"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/selector_btn_common"
            android:gravity="center"
            android:text="@string/stock_in_next_step"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>
</layout>