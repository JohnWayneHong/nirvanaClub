<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.OrderStockOutDetailsBean.ListBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="SpUsage,RtlHardcoded"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_stock_in_product_name"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                android:text="@{data.productText}"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_stock_in_product_batch"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.productBatch}"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_stock_out_warehouse_name"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.warehouseText}"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_99"
                android:layout_marginLeft="110dp"
                android:singleLine="true"
                tools:text="244776740213121278"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan_number_dlh"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red_ff"
                android:layout_marginLeft="110dp"
                android:text="@{data.getPlanNumber}"
                android:singleLine="true"
                tools:text="66666"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_number_dlh"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red_ff"
                android:layout_marginLeft="110dp"
                android:text="@{data.finishNumber}"
                android:singleLine="true"
                tools:text="66666"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_number"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:layout_marginLeft="110dp"
                android:text="@{data.checkNumberText}"
                android:singleLine="true"
                tools:text="66666"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_number"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:layout_marginLeft="110dp"
                android:text="@{data.inputNumberText}"
                android:singleLine="true"
                tools:text="66666"
                android:textSize="14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_stock_in_scan_number"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:layout_marginLeft="110dp"
                android:text="@{data.getCurrentNumber}"
                android:singleLine="true"
                tools:text="66666"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="@{data.isDetailsVisible}"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_order_stock_out_details_execute"
                android:background="@drawable/radius96_white_stoke"
                android:textColor="@color/gray_66"
                android:text="@string/order_stock_out_execute"
                android:layout_width="96dp"
                android:gravity="center"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_order_stock_out_details_input"
                android:background="@drawable/radius96_white_stoke"
                android:textColor="@color/gray_66"
                android:text="@string/input_check_number_dlh"
                android:layout_width="96dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_order_stock_out_details_scan_code"
                android:background="@drawable/radius96_blue"
                android:textColor="@color/white"
                android:text="@string/scan_check_number_dlh"
                android:layout_width="96dp"
                android:gravity="center"
                android:textSize="14sp"
                android:visibility="@{data.scanCodeVisible}"
                android:layout_height="30dp" />

        </LinearLayout>
    </LinearLayout>

</layout>