<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="SpUsage,RtlHardcoded,RtlSymmetry">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_b8"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/pending_task_hint"
            android:textSize="12sp" />

        <com.jgw.common_library.base.view.CustomRecyclerViewContainer
            android:id="@+id/rvc_disassemble_wait_upload"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.jgw.common_library.base.view.CustomBaseRecyclerView
                android:id="@+id/rv_disassemble_wait_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.jgw.common_library.base.view.CustomRecyclerViewContainer>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_ee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_disassemble_wait_upload_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_ee" />

            <TextView
                android:id="@+id/tv_disassemble_wait_upload_delete_all"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_white_background"
                android:gravity="center"
                android:text="@string/all_delete"
                android:textColor="@color/main_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_disassemble_wait_upload_submit"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_blue_background"
                android:gravity="center"
                android:text="@string/upload"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
