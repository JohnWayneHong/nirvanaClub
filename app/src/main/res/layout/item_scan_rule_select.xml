<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.delingha.bean.ScanRuleBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?android:attr/selectableItemBackground"
        tools:ignore="SpUsage,ContentDescription,RtlHardcoded,RtlSymmetry">
        <TextView
            android:text="@{data.des}"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/gray_33"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            tools:text="123123123123123123123123123123123123123123123123123123123123123"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:scaleType="center"
            android:src="@drawable/icon_check_ok"
            android:visibility="@{data.selectImageVisible}"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            tools:visibility="visible" />
        <View
            android:layout_width="match_parent"
            android:background="@color/gray_ee"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
</layout>